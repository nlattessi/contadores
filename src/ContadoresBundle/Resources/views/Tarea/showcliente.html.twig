{% extends 'JordiLlonchCrudGeneratorBundle::layout.html.twig' %}

{% block title %}
    {{ parent() }} - {{ 'views.show.show'|trans({'%entity%': 'Tarea'}, 'JordiLlonchCrudGeneratorBundle') }}
{% endblock %}

{% block menu %}
    {{ include('ContadoresBundle:NavBars:navbar.html.twig') }}
{% endblock %}

{% block page %}

    <h1>{{ entity.nombre }}</h1>

    <form class="form-horizontal">
        <fieldset>        <div class="control-group">
                <label class="control-label">Fecha inicio</label>
                <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.fechaInicio|date('Y-m-d') }}</span>            </div>
            </div>

                <div class="control-group">
                    <label class="control-label">Fecha fin</label>
                    <div class="controls">
                        <span class="input-xlarge uneditable-input">
                             {% if entity.fechaFin %}
                                 {{ entity.fechaFin|date('Y-m-d') }}
                             {% else %}
                                 <i>Esta tarea no está terminada aún</i>
                             {% endif %}
                        </span>

                    </div>
                </div>
                 <div class="control-group">
                <label class="control-label">Vencimiento fiscal</label>
                <div class="controls">                <span class="input-xlarge uneditable-input">
                    {% if entity.vencimientoFiscal %}
                        {{ entity.vencimientoFiscal|date('Y-m-d') }}
                    {% else %}
                        <i>Sin Vencimiento Fiscal</i>
                    {% endif %}
                </span>            </div>
            </div>


        </fieldset>
    </form>
    <h4 class="control-label">Sub tareas ({{ entity.subTareas|length }})</h4>

        {% if entity.subTareas|length < 1 %}
            <p> <i>Esta tarea no tiene sub tareas</i></p>
        {% endif %}
        {% for subTarea in entity.subTareas %}
            <p>
                <a href="{{ path('subtarea_cliente_show', { 'id': subTarea.id }) }}">
                    <i>{{ subTarea.nombre }}</i>
                </a>
            </p>
        {% endfor %}



    <div>
        <div class="float-left">
            <a class="btn" href="{{ path('cliente_tareas') }}">
                {{ 'views.recordactions.backtothelist'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
            </a>
        </div>
    </div>
{% endblock %}
