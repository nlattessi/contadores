{% extends 'JordiLlonchCrudGeneratorBundle::layout.html.twig' %}

{% block title %}
{{ parent() }} - {{ 'views.show.show'|trans({'%entity%': 'Tarea'}, 'JordiLlonchCrudGeneratorBundle') }}
{% endblock %}

{% block menu %}
{{ include('ContadoresBundle:NavBars:navbar.html.twig') }}
{% endblock %}

{% block page %}

<h1>Tarea</h1>

<form class="form-horizontal">
    <fieldset>        <div class="control-group">
            <label class="control-label">Id</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.id }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Fecha inicio</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.fechaInicio|date('Y-m-d ') }}</span>            </div>
        </div>
        {% if entity.fechaFin %}
        <div class="control-group">
            <label class="control-label">Fecha fin</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.fechaFin|date('Y-m-d ') }}</span>            </div>
        </div>
        {% endif %}
        <div class="control-group">
            <label class="control-label">Fecha creacion</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.fechaCreacion|date('Y-m-d ') }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Vencimiento fiscal</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">
                    {% if entity.vencimientoFiscal %}
                        {{ entity.vencimientoFiscal|date('Y-m-d ') }}
                    {% else %}
                        <i>Sin Vencimiento Fiscal</i>
                    {% endif %}
                </span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Vencimiento interno</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.vencimientoInterno|date('Y-m-d ') }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Nombre</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.nombre }}</span>            </div>
        </div>    </fieldset>
</form>

<div>
    <div class="float-left">
        <a class="btn" href="{{ path('tarea') }}">
            {{ 'views.recordactions.backtothelist'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>
    </div>
    <div class="float-left">
        <a class="btn btn-primary" href="{{ path('tarea_edit', { 'id': entity.id }) }}">
            {{ 'views.recordactions.edit'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>
    </div>
    <div class="float-left">
        <form action="{{ path('tarea_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit" onclick="return confirm('{{ 'views.recordactions.confirm'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}');">{{ 'views.recordactions.delete'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</button>
        </form>
    </div>
</div>
{% endblock %}
