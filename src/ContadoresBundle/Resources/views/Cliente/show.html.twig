{% extends 'JordiLlonchCrudGeneratorBundle::layout.html.twig' %}

{% block title %}
{{ parent() }} - {{ 'views.show.show'|trans({'%entity%': 'Cliente'}, 'JordiLlonchCrudGeneratorBundle') }}
{% endblock %}

{% block menu %}
{{ include('ContadoresBundle:NavBars:navbar.html.twig') }}
{% endblock %}

{% block page %}

<h1>Cliente</h1>

<form class="form-horizontal">
    <fieldset>        <div class="control-group">
            <label class="control-label">Id</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.id }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Nombre</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.nombre }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Direccion</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.direccion }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Telefono</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.telefono }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Mail</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.mail }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Cuit</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.cuit }}</span>            </div>
        </div>
    </fieldset>
    <h2>Tareas</h2>
    {% for tarea in tareas %}
        <b>{{ tarea.nombre }}</b>  <br/>
        {% for subTarea in tarea.subTareas %}
            <i>{{ subTarea.nombre }}</i>     <br/>
        {% endfor %}
    {% endfor %}
    {% if not tareas %}
        <p> <i>No hay tareas asignadas</i></p>
    {% endif %}
</form>

<div>
    <div class="float-left">
        <a class="btn" href="{{ path('cliente') }}">
            {{ 'views.recordactions.backtothelist'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>
    </div>
    <div class="float-left">
        <a class="btn btn-primary" href="{{ path('cliente_edit', { 'id': entity.id }) }}">
            {{ 'views.recordactions.edit'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>
    </div>
    <div class="float-left">
        <form action="{{ path('cliente_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit" onclick="return confirm('{{ 'views.recordactions.confirm'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}');">{{ 'views.recordactions.delete'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</button>
        </form>
    </div>
</div>
{% endblock %}
