{% extends 'ContadoresBundle:Layout:layout.html.twig' %}

{% block encabezado %}
    Ver contadores
{% endblock %}

{% block breadcrum %}
    <li><a href="{{ path('home') }}">Inicio</a></li>
    <li>Contadores</li>
    <li class="active">Ver contadores</li>
{% endblock %}


{% block filtro %}
    {% if form_errors(filterForm) %}
        <div class="span2">
            <div class="alert alert-block alert-error fade in form-errors">
                {{ form_errors(filterForm) }}
            </div>
            &nbsp;
        </div>
    {% endif %}
    <div class="page-header-actions">
        <a class="btn btn-sm btn-default btn-outline btn-round" data-toggle="collapse" data-target="#filters">
            {{ 'views.index.filters'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
            <span class="caret"></span>
        </a>
    </div>
    <div class="span12">
        <div id="filters" class="collapse">

            <form class="well" action="{{ path('vencimiento') }}" method="get" {{ form_enctype(filterForm) }}>
                <form class="well" action="{{ path('contador') }}" method="get" {{ form_enctype(filterForm) }}>
                    {{ form_row(filterForm.id) }}
                    {{ form_row(filterForm.nombre) }}
                    {{ form_row(filterForm.apellido) }}
                    {{ form_row(filterForm.celular) }}
                    {{ form_row(filterForm.mail) }}
                    {{ form_row(filterForm.telefono) }}
                    {{ form_rest(filterForm) }}

                    <p>
                        <button type="submit" name="filter_action" value="filter">{{ 'views.index.filter'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</button>
                        <button type="submit" name="filter_action" value="reset">{{ 'views.index.reset'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</button>
                    </p>
                </form>

                <p>
                    <button type="submit" name="filter_action" value="filter">{{ 'views.index.filter'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</button>
                    <button type="submit" name="filter_action" value="reset">{{ 'views.index.reset'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</button>
                </p>
            </form>
        </div>
    </div>
{% endblock %}

{% block page %}

<div class="row">

    <div class="span12">

    <table class="table table-striped table-bordered table-condensed">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Celular</th>
            <th>Mail</th>
            <th>Telefono</th>
            <th>{{ 'views.index.actions'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('contador_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.nombre }}</td>
            <td>{{ entity.apellido }}</td>
            <td>{{ entity.celular }}</td>
            <td>{{ entity.mail }}</td>
            <td>{{ entity.telefono }}</td>
            <td>
        <a class="btn btn-mini" href="{{ path('contador_show', { 'id': entity.id }) }}">
            <i class="icon wb-eye" aria-hidden="true"></i>
        </a>
        <a class="btn btn-mini" href="{{ path('contador_edit', { 'id': entity.id }) }}">
            <i class="icon wb-pencil" aria-hidden="true"></i>
        </a>            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
    </div>
    <div class="dt-panelfooter clearfix">
        <a class="btn btn-primary likepaginator" href="{{ path('contador_new') }}">
            {{ 'views.index.createnew'|trans({}, 'JordiLlonchCrudGeneratorBundle') }} Contador
        </a>
        <div class="dataTables_paginate paging_simple_numbers">

            {{ pagerHtml|raw }}
        </div>
    </div>

</div>

{% endblock %}
