{% extends 'JordiLlonchCrudGeneratorBundle::layout.html.twig' %}

{% block title %}
    {{ parent() }} - {{ 'views.show.show'|trans({'%entity%': 'Area'}, 'JordiLlonchCrudGeneratorBundle') }}
{% endblock %}

{% block page %}

    <h1>Area</h1>

    <form class="form-horizontal">
        <fieldset>        <div class="control-group">
                <label class="control-label">Id</label>
                <div class="controls">                <span class="input-xlarge uneditable-input">{{ area.id }}</span>            </div>
            </div>        <div class="control-group">
                <label class="control-label">Nombre</label>
                <div class="controls">                <span class="input-xlarge uneditable-input">{{ area.nombre }}</span>            </div>
            </div>    </fieldset>
        <div class="span12">
            <h2>Contadores</h2>
            <table class="table table-striped table-bordered table-condensed">
                <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Celular</th>
                </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td>{{ entity.nombre }}</td>
                        <td>{{ entity.apellido }}</td>
                        <td>{{ entity.celular }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

    </form>

    <div>
        <div class="float-left">
            <a class="btn" href="{{ path('area') }}">
                {{ 'views.recordactions.backtothelist'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
            </a>
        </div>
    </div>
{% endblock %}